{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmitOnError": false,
    "strictNullChecks": false,            // Relax null checks
    "noImplicitAny": false,               // Relax implicit 'any' type
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "resolveJsonModule": true             // Resolve .json files as modules
  }
}
